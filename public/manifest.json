  "shortcuts": [
    {
      "name": "Add Transaction",
      "short_name": "New Transaction",
      "description": "Quickly add a new financial transaction",
      "url": "/transactions?action=new",
      "icons": [
        {
          "src": "/icons/shortcut-transaction.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "View Budget",
      "short_name": "Budget",
      "description": "Check your budget and spending",
      "url": "/budget",
      "icons": [
        {
          "src": "/icons/shortcut-budget.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Investments",
      "short_name": "Investments",
      "description": "Monitor your investment portfolio",
      "url": "/investments",
      "icons": [
        {
          "src": "/icons/shortcut-investments.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+meridian",
      "url": "/share?data=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", ".csv", ".xlsx", ".xls"]
        }
      ]
    }
  }
}